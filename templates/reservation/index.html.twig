{% extends 'base.html.twig' %}

{% block title %}Hello ReservationController!{% endblock %}

{% block body %}

    {% if app.user %}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-4 px-4 py-3 rounded shadow text-sm font-medium
                            {% if label == 'error' %}
                                bg-red-400-100 text-red-800
                            {% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% for reservation in reservation %}


        {{ reservation.id }}
            <a href="{{ path('app_reservation_delete', {id:reservation.id}) }}">Annuler</a>

        {% endfor %}

    {% endif %}


{% endblock %}

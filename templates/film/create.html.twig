{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto p-6">
        <h1 class="text-2xl font-bold mb-6 text-center">Ajouter un film</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        {% for error in form.duration.vars.errors %}
            <li class="text-red-600 text-sm">{{ error.message }}</li>
        {% endfor %}

        <div>
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
        </div>

        <div>
            {{ form_label(form.summary, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.summary, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500', 'rows': 4}}) }}
        </div>

        <div>
            {{ form_label(form.dub, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.dub, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
        </div>

        <div>
            {{ form_label(form.category, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.category, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
        </div>

        <div>
            {{ form_label(form.duration, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.duration, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
            {{ form_errors(form.duration) }}
        </div>

        <div class="text-center">
            <button type="submit"
                    class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Nouveau
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

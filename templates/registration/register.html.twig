{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    {{ flash_error }}
                </div>
            {% endfor %}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-4 px-4 py-3 rounded shadow text-sm font-medium
                            {% if label == 'warning' %}
                                bg-red-400-100 text-red-800
                            {% endif %}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <h1 class="text-center text-3xl font-extrabold text-gray-900">Register</h1>

            {{ form_start(registrationForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}

            {{ form_errors(registrationForm) }}

            <div class="rounded-md shadow-sm -space-y-px">
                {{ form_row(registrationForm.email, {
                    'attr': {
                        'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'
                    }
                }) }}

                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password',
                    'attr': {
                        'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'
                    }
                }) }}

                {{ form_row(registrationForm.agreeTerms, {
                    'attr': {
                        'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded'
                    },
                    'label_attr': {
                        'class': 'ml-2 block text-sm text-gray-900'
                    }
                }) }}
            </div>

            <div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Register
                </button>
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
    <div class="text-center mt-4">
        <a href="{{ path('app_login') }}" class="inline-block text-indigo-600 hover:text-indigo-800 font-medium">
            Se connecter
        </a>
    </div>
{% endblock %}

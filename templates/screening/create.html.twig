{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto p-6 bg-white rounded-lg shadow-md mt-8">

        <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Ajouter une SÃ©ance</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-4 px-4 py-3 rounded shadow text-sm font-medium
                            {% if label == 'error' %}
                                bg-red-400-100 text-red-800
                            {% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div>
            {{ form_label(form.film, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.film, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
            {{ form_errors(form.film) }}
        </div>

        <div>
            {{ form_label(form.dub, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.dub, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
            {{ form_errors(form.dub) }}
        </div>

        <div>
            {{ form_label(form.room, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.room, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
            {{ form_errors(form.room) }}
        </div>

        <div>
            {{ form_label(form.schedule, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.schedule, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
            {{ form_errors(form.schedule) }}
        </div>

        <div>
            {{ form_label(form.price, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.price, {'attr': {'class': 'mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
            {{ form_errors(form.price) }}
        </div>

        <div class="text-center">
            <button type="submit"
                    class="inline-flex justify-center py-2 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition">
                Nouveau
            </button>
        </div>

        {{ form_end(form) }}

    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <div>

        <ul >
            {% for category in category %}
                <li>
                    {{ category.id }} : {{ category.name }}
                </li>
            {% else %}
                <li>Aucune catégorie trouvée.</li>
            {% endfor %}
        </ul>

        {{ form_start(form) }}

        {{ form_row(form.name) }}


        <button type="submit">
            Envoyer
        </button>
        {{ form_end(form) }}

    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Salle{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto p-6">
        <h1 class="text-2xl font-bold mb-6 text-center">Ajouter une salle</h1>


        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-4 px-4 py-3 rounded shadow text-sm font-medium
                            {% if label == 'warning' %}
                                bg-red-400-100 text-red-800
                            {% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <div>
            {{ form_label(form.number, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.number, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
            {{ form_errors(form.number) }}
        </div>

        <div>
            {{ form_label(form.seats, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.seats, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
            {{ form_errors(form.seats) }}
        </div>

        <div class="text-center">
            <button type="submit"
                    class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Nouveau
            </button>
        </div>

        {{ form_end(form) }}
    </div>
    <div class="mt-6 text-center">
        <a href="{{ path('app_rooms') }}"
           class="inline-block text-indigo-600 hover:text-indigo-800 font-semibold">
            ‚Üê Retour
        </a>
    </div>
{% endblock %}
